{
  "name": "fraglates",
  "version": "0.3.0",
  "description": "An open source templating engine for generating server-side hypertext templates and fragments.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "jest": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest",
    "test": "npm run precompile && npm run jest",
    "build": "tsc && chmod +x ./dist/compiler.js",
    "precompile": "fraglates '**/*.{html,njk}' -p ./src/__tests__/templates -o ./src/__tests__/precompiled",
    "prepare": "rm -rf dist && npm run build",
    "prepublishOnly": "npm run test",
    "compiler": "npm run build && npm run precompile"
  },
  "keywords": [
    "html",
    "hypertext",
    "ssr",
    "nunjucks",
    "htmx"
  ],
  "author": "Jeremy Daly <jeremy@jeremydaly.com>",
  "license": "MIT",
  "bin": {
    "fraglates": "./dist/compiler.js"
  },
  "dependencies": {
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/nunjucks": "^3.2.6",
    "chokidar": "^3.6.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getampt/fraglates.git"
  },
  "files": [
    "dist/"
  ]
}
